<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="120dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/face"
        android:layout_width="30dp"
        android:src="@drawable/face"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:text="张小五"
        android:layout_toRightOf="@id/face"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/face"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="10sp"
        android:text="21:00 | 未知"/>
    <ImageView
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:src="@drawable/stick"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/fire"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/fire"
        android:layout_below="@+id/face"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textSize="16sp"
        android:layout_below="@+id/face"
        android:lineSpacingExtra="4dp"
        android:text="增强国防意识，建设强军队伍，国家安全重于泰山。国防教育不能流于形式，增…"
        android:layout_toRightOf="@id/fire"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="9dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/comment"/>
        <TextView
            android:id="@+id/id_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:text="456"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/comment"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="456" />
    </LinearLayout>
</RelativeLayout>